[flake8]
ignore =
  D203,
  # line too long
  E501,
  # W503 line break before binary operator
  W503,
  # E203 whitespace before ':'
  E203
per-file-ignores =
  # imported but unused
  # __init__.py: F401
  test_*.py: F401
exclude =
  .git,
  __pycache__,
  docs/source/conf.py,
  old,
  build,
  dist,
  .venv
  pad*.py
max-complexity = 25
